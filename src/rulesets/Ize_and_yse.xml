<?xml version="1.0" encoding="UTF-8"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ruleset.xsd">
  <title>-ize and -yse</title>
  <rule>
    <report>-ize</report>
    <regex>
      <find>\b([a-z]+)(?:(?&lt;=ic|[ai]m|[^a-z]pr|[eiou][tr])|(?&lt;![rd]a|c|gu|m|parad|o|p|r|[acrs]t|v|w))(i)s(a(?:bl[ey]|tion(?:|al(?:|ly)|s))|e|ed|ers?|(?&lt;!ys)es|ing)\b</find>
      <replace adjustcase="true">\1\2z\3</replace>
    </regex>
  </rule>
  <rule>
    <report>-yse</report>
    <regex>
      <find>\b([a-z]+)(?:(?&lt;=emphas|fantas)|(?&lt;!ba|ma|pr|se|s))(y)z(a(?:bl[ey]|tion(?:|al(?:|ly)|s))|es?|ed|ers?|ing)\b</find>
      <replace adjustcase="true">\1\2s\3</replace>
    </regex>
  </rule>
</ruleset>

